<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coderming.myappportfolio.MainActivity"
    android:background="@color/material_grey_300">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/my_nanodegree_apps"
            android:id="@+id/textView_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin">
                <Button
                    android:text="@string/popular_movies"
                    android:id="@+id/bt_popular_movie"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="10"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:textColor="@color/bright_foreground_material_dark"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin">
                <Button
                    android:text="@string/stock_hawk"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="10"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:textColor="@color/bright_foreground_material_dark"
                    android:onClick="sendMessage"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin">
                <Button
                    android:text="@string/build_it_bigger"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="10"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:onClick="sendMessage"
                    android:textColor="@color/bright_foreground_material_dark"
                    />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin"
                >

                <Button
                    android:text="MAKE YOUR APP MATERIAL"
                    android:id="@+id/bt_makematerial"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="10"
                    android:padding="16dp"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:onClick="sendMessage"
                    android:textColor="@color/bright_foreground_material_dark"
                    />
                >
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin"
                >
                <Button
                    android:text="GO UBIQUITOUR"
                    android:id="@+id/bt_go_ubiquitous"
                    android:layout_column="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:onClick="sendMessage"
                    android:textColor="@color/bright_foreground_material_dark"
                    />

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/abc_input_method_navigation_guard"
                android:layout_margin="@dimen/table_row_margin"
                >
                <Button
                    android:text="CAPSTONE"
                    android:id="@+id/bt_capstone"
                    android:layout_column="10"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/abc_input_method_navigation_guard"
                    android:onClick="sendMessage"
                    android:textColor="@color/bright_foreground_material_dark"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
